<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:text="手机验证"
            android:textColor="#000000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check"
            android:paddingTop="10sp"
            android:text="请输入您的手机号\n根据手机号登陆或注册"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginTop="20sp"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingBottom="15sp"
            android:paddingEnd="20sp"
            android:paddingStart="20sp"
            android:paddingTop="15sp" />

        <LinearLayout
            android:id="@+id/check_sum_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_marginTop="20sp">

            <EditText
                android:id="@+id/check_sum"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/rounded_edittext"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:paddingBottom="15sp"
                android:paddingEnd="20sp"
                android:paddingStart="20sp"
                android:paddingTop="15sp" />

            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/button_untouchable_background"
                android:paddingBottom="15sp"
                android:paddingEnd="20sp"
                android:paddingStart="20sp"
                android:paddingTop="15sp"
                android:text="获取验证码"
                android:textColor="#FFFFFF" />

        </LinearLayout>


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_sum_area"
            android:layout_marginTop="20sp"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingBottom="15sp"
            android:paddingEnd="20sp"
            android:paddingStart="20sp"
            android:paddingTop="15sp" />

        <EditText
            android:id="@+id/password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="20sp"
            android:background="@drawable/rounded_edittext"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:paddingBottom="15sp"
            android:paddingEnd="20sp"
            android:paddingStart="20sp"
            android:paddingTop="15sp" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_confirm"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_untouchable_background"
            android:paddingBottom="10sp"
            android:paddingEnd="20sp"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

</RelativeLayout>
